{
  "compilerOptions": {
    "target": "ES6", // Compile to ES6 for modern Node.js environments
    "module": "commonjs", // Use CommonJS modules for Node.js compatibility
    "outDir": "./dist", // Output compiled files to the "dist" folder
    "rootDir": "./src", // Specify the root directory for your source files
    "strict": true, // Enable strict type-checking
    "esModuleInterop": true, // Improve compatibility with CommonJS modules
    "skipLibCheck": true, // Skip type-checking of library files
    "forceConsistentCasingInFileNames": true, // Ensure consistent file naming
    "declaration": true, // Generate TypeScript declaration files (*.d.ts)
    "sourceMap": true // Generate source maps for debugging
  },
  "include": ["src/**/*"], // Include all files in the "src" folder
  "exclude": ["node_modules", "dist"] // Exclude these folders
}